# Calendar Availability System - Environment Configuration
# Copy this file to .env and fill in your actual values

# Server Configuration
NODE_ENV=development
PORT=3000
API_VERSION=v1

# Database Configuration
DATABASE_URL=postgresql://localhost:5432/calendar_availability_dev
DB_HOST=localhost
DB_PORT=5432
DB_NAME=calendar_availability_dev
DB_USER=postgres
DB_PASSWORD=your_password_here
DB_POOL_MIN=2
DB_POOL_MAX=10

# Google Calendar API (MCP Integration)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=http://localhost:3000/auth/google/callback

# Gmail API (MCP Integration)
GMAIL_CLIENT_ID=your_gmail_client_id
GMAIL_CLIENT_SECRET=your_gmail_client_secret

# JWT Authentication
JWT_SECRET=your_jwt_secret_minimum_32_characters
JWT_REFRESH_SECRET=your_jwt_refresh_secret_minimum_32_characters
JWT_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# Encryption
ENCRYPTION_KEY=your_encryption_key_32_bytes_base64

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# MCP Server Configuration
MCP_CALENDAR_SERVER_PATH=/path/to/@modelcontextprotocol/server-google-calendar
MCP_GMAIL_SERVER_PATH=/path/to/@modelcontextprotocol/server-gmail

# Web Scraping (Phase 3)
# PLAYWRIGHT_HEADLESS=true
# SCRAPING_TIMEOUT=30000

# Redis (for caching, optional)
# REDIS_URL=redis://localhost:6379

# Monitoring (optional)
# SENTRY_DSN=your_sentry_dsn
# NEW_RELIC_LICENSE_KEY=your_new_relic_key
